                             </span><span class="s2">"5"</span><span class="w"> </span><span class="o">=</span><span class="w"> </span><span class="n">toupper</span><span class="p">(</span><span class="s2">"Outcome"</span><span class="p">)),</span><span class="w">
                  </span><span class="n">col</span><span class="w"> </span><span class="o">=</span><span class="w"> </span><span class="s2">"#fc3b0f"</span><span class="p">,</span><span class="w">
                  </span><span class="n">fill</span><span class="w"> </span><span class="o">=</span><span class="w"> </span><span class="s2">"white"</span><span class="p">,</span><span class="w">
                  </span><span class="n">fontfam</span><span class="w"> </span><span class="o">=</span><span class="w"> </span><span class="s1">'Quadraat'</span><span class="p">,</span><span class="w">
